<%- include('includes/head') %>
  <%- include('includes/nav') %>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-3">
          <h1 class="text-center">Login</h1>
          <p class="text-center lead">Crie sua conta ou faça login!</p>

          <%- include('includes/messages') %>

            <div class="row mt-5">
              <div class="col-lg-6 border-end">
                <h4>Faça seu cadastro</h4>
                <p>Crie uma conta para poder acessar o sistema.</p>

                <form action="/login/register" method="POST">
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                  <div class=" mb-3">
                    <label for="email" class="form-label">Seu email</label>
                    <input type="email" class="form-control" id="email" name="email">
                  </div>
                  <div class="mb-3">
                    <label for="password" class="form-label">Sua senha</label>
                    <input type="password" class="form-control" id="password" name="password">
                  </div>
                  <button type="submit" class="btn btn-primary">Criar minha conta</button>
                </form>
              </div>
              <div class="col-lg-6">
                <h4>Login</h4>
                <p>Faça aqui seu login.</p>

                <form action="/login/register" method="POST">
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                  <div class="mb-3">
                    <label for="email" class="form-label">Seu email</label>
                    <input type="email" class="form-control" id="email" name="email">
                  </div>
                  <div class="mb-3">
                    <label for="password" class="form-label">Sua senha</label>
                    <input type="password" class="form-control" id="password" name="password">
                  </div>
                  <button type="submit" class="btn btn-primary">Login</button>
                </form>
              </div>
            </div>

        </div>
        <div class="col-lg-2"></div>
      </div>
    </div>

    <%- include('includes/footer') %>