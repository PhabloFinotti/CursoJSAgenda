<%- include('includes/head') %>
  <%- include('includes/nav') %>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-3">
          <h1 class="text-center">Agenda</h1>
          <p class="text-center lead">Seus contatos abaixo!</p>

          <%- include('includes/messages') %>

            <% if(contatos.length){ %>
              <div class="responsive-table">
                <table class="table my-3">
                  <thead>
                    <th>Nome</th>
                    <th>Sobrenome</th>
                    <th>Telefone</th>
                    <th>Email</th>
                    <th></th>
                    <th></th>
                  </thead>
                  <tbody>
                    <% contatos.forEach(contato=> { %>
                      <tr>
                        <td>
                          <%= contato.nome %>
                        </td>
                        <td>
                          <%= contato.sobrenome %>
                        </td>
                        <td>
                          <%= contato.telefone %>
                        </td>
                        <td>
                          <%= contato.email %>
                        </td>
                        <td>
                          <a href="/contato/index/<%= contato._id %>">Editar</a>
                        </td>
                        <td>
                          <a class="text-danger" href="/contato/delete/<%= contato._id %>">Excluir</a>
                        </td>
                      </tr>
                      <% }) %>
                  </tbody>
                </table>
              </div>
              <% } else { %>
                <p class="text-center lead">NÃ£o existem contatos na sua agenda!</p>
                <% } %>
        </div>
        <div class="col-lg-2"></div>
      </div>
    </div>

    <%- include('includes/footer') %>